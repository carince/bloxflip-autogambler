{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "newLine": "LF",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "paths": {
            "@utils/*": [
                "utils/*"
            ],
            "@bf/*": [
                "bloxflip/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "/.github",
        "./dist",
        "./node_modules"
    ]
}