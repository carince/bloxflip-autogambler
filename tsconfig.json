{
    "ts-node": {
        "swc": true,
        "esm": true
    },
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "module": "ESNext",
        "target": "ESNext",
        "newLine": "LF",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "useUnknownInCatchVariables": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "incremental": true,
        "isolatedModules": true,
        "allowJs": true,
        "paths": {
            "@utils/*": ["backend/utils/*"],
            "@api/*": ["backend/api/*"],
            "@bf/*": ["backend/bloxflip/*"],
            "@types": ["backend/index.d.ts"]
            
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "/.github",
        "./dist",
        "./node_modules"
    ]
}